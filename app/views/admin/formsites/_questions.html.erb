<%= semantic_form_for [:admin, @formsite], builder: ActiveAdmin::FormBuilder do |f| %>

    <% f.has_many :questions, sortable: :position, sortable_start: 1 do |t| %>
      <% t.input :position %>
      <% t.input :text %>
      <% t.input :_destroy, :as => :boolean, :required => false, :label => 'Remove' %>
      <% t.has_many :answers do |a| %>
        <% a.input :text %>
        <% a.input :redirect_url %>
        
        <% a.input :flow, :as => :select, :collection => Answer.flows.keys, :include_blank => false %>
        <% a.input :input_type, :as => :select, :collection => Answer.input_types.keys, :include_blank => false %>
      <% end %>
    <% end %>
<% end %>