<%= render "admin/shared/question_table_tabs", selected: "total" %>

<%- if table_stats.blank? %>
  <h2>There is no questions for selected Leadgen Site.</h2>
<% else %>

  <table class="index_table index">
    <thead>
      <tr>
        <th>Question</th>

        <%- 
          key = table_stats.keys.first 
          answers = table_stats[key].keys
        %>

        <%- answers.each do |answer| %>
          <th><%= answer %></th>  
        <% end %>

      </tr>
    </thead>
    <tbody>
        <%- table_stats.each do |question, stats| %> 
          <tr>
            <td><%= question %></td>
            <%- stats.each do |key, value| %>
              <%- if value.is_a?(Hash) %>
                <td>0</td>
              <% else %>
                <td><%= value %></td>
              <% end %>
            <%- end %>
          </tr>
        <% end %>
    </tbody>
  </table>
<% end %>
